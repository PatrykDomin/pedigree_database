datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Breeding {
  id      Int    @id @default(autoincrement())
  name    String @unique
  breeder String
  dogs    Dog[]
}

model Dog {
  id  Int    @id @default(autoincrement())
  pkr String @unique

  sex          Boolean @default(true) // true -> dog // false -> bitch
  litter       String
  name         String
  pedigreeName String

  momId  Int?  @unique
  dadId  Int?  @unique
  mom    Dog?  @relation("mom", fields: [momId], references: [id])
  dad    Dog?  @relation("dad", fields: [dadId], references: [id])
  momDog Dog[] @relation("mom")
  dadDog Dog[] @relation("dad")

  breedingId Int
  breeding   Breeding @relation(fields: [breedingId], references: [id])
}
