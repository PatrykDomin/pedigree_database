// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Breeding {
  id      Int    @id @default(autoincrement())
  name    String @unique
  breeder String
  dogs    Dog[]
}

model Dog {
  id  Int    @id @default(autoincrement())
  pkr String @unique

  birth DateTime

  sex          Boolean @default(true) // true -> dog // false -> bitch
  litter       String
  name         String
  pedigreeName String

  momId Int?
  dadId Int?
  mom   Dog? @relation("mom", fields: [momId], references: [id])
  dad   Dog? @relation("dad", fields: [dadId], references: [id])

  momChildren Dog[] @relation("mom")
  dadChildren Dog[] @relation("dad")

  titles   String[]
  phisical String? //url

  breedingId Int
  breeding   Breeding @relation(fields: [breedingId], references: [id])
}
